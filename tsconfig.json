{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2017",                          // Specify ECMAScript target version
    "module": "ES6",                          // Specify module code generation
    "strict": true,                           // Enable all strict type-checking options
    "esModuleInterop": true,                  // Enable compatibility with CommonJS modules
    "skipLibCheck": true,                     // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names
    "outDir": "./dist",                       // Redirect output structure to the directory
    "rootDir": "./src",                       // Specify the root directory of input files
    "moduleResolution": "node",               // Use Node.js module resolution strategy
    "resolveJsonModule": true,                // Include modules imported with .json extension
    "sourceMap": true                         // Generate corresponding .map files
  },
  "include": ["src", "src/modules"],                 // Include all TypeScript files in the src/modules directory
  "exclude": ["node_modules", "dist"]         // Exclude node_modules and dist directories
}